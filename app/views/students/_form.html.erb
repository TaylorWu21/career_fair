<%= form_for @student do |f| %>
	<%= f.label :first_name %>
	<%= f.text_field :first_name %>

	<%= f.label :last_name %>
	<%= f.text_field :last_name %>

	<%= f.label :email %>
	<%= f.text_field :email %>

	<%= f.label :phone %>
	<%= f.text_field :phone %>

	<%= f.label :major %>
	<%= f.text_field :major %>

	<%= f.submit %>
<% end %>